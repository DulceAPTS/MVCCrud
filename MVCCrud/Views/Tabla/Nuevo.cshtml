@model MVCCrud.Models.ViewModels.TablaViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo Usuario</h2>

@using (Html.BeginForm("Nuevo", "Tabla", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12">
        <div>
            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, "", new { @class = "from-control" })
            @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red" })
        </div>
        <br />
        <div>
            @Html.LabelFor(d => d.Correo)
            @Html.TextBoxFor(d => d.Correo, "", new { @class = "from-control" })
            @Html.ValidationMessageFor(d => d.Correo, null, new { @class = "red" })
        </div>
        <br />
        <div>
            @Html.LabelFor(d => d.Fecha_nacimiento)
            @Html.TextBoxFor(d => d.Fecha_nacimiento, "", new { @class = "from-control" })
            @Html.ValidationMessageFor(d => d.Fecha_nacimiento, null, new { @class = "red" })
        </div>
      
        <br />
        <div style="text-align:right;">
            <input value="Guardar" class="btn btn-primary" type="submit" />
        </div>
    </div>
</div>
}           

